{
  "extends": "solhint:recommended",
  "plugins": [],
  "rules": {
    "compiler-version": ["error", "^0.8.0"],
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "function-max-lines": ["warn", 180]
  }
}
